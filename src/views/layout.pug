doctype html
head
  meta(name='viewport' content='width=device-width, initial-scale=1')
  meta(charset='UTF-8')
  link(
    rel="stylesheet" 
    href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css"
  )
  style.
    a {
      cursor: pointer;
      text-decoration: underline;
    }

    .content {
      width: 1080px;
    }

    button {
      border: 1px solid rgb(139 92 246);
      padding: 5px;
      width: 100px;
      margin: 10px 0 0 0;
    }


  title Revolution Street

main(class="flex justify-center w-full")
  div(class="flex flex-col content")
    div(class="flex justify-between p-4")
      div(class="flex justify-center flex-col")
        h1(class="text-4xl")
          | Revolution Street
        h4(class="text-2xl")
          | DDR Extreme Score Tracker
      if authenticated
        div
          a(class="px-2" href="/log_out") Log out
      else
        div
          a(class="px-2" href="/sign_up") Sign up
          a(href="/login") Log in
    

    div(class="flex")
      div(class="border-4 p-4 w-48")
        div(class="flex flex-col")
          a(class="text-lg" href="/") News
          a(class="text-lg" href="/users") Rankings
          if currentUser
            a(class="text-lg" href=`/users/${currentUser.username}`) Profile
          a(class="text-lg" href="/submit_scores") Submit Scores

      div(class="border-4 border-l-0 p-4 w-full")
        div
          block content