doctype html
head
  meta(name='viewport' content='width=device-width, initial-scale=1')
  meta(charset='UTF-8')
  link(
    rel="stylesheet" 
    href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css"
  )
  style.
    a {
      cursor: pointer;
    }

    .content {
      width: 1080px;
    }

  title Revolution Street

main(class="flex justify-center w-full")
  div(class="flex flex-col content")
    div(class="flex justify-center flex-col p-4")
      h1(class="text-4xl")
        | Revolution Street
      h4(class="text-2xl")
        | DDR Extreme Score Tracker

    div(class="flex")
      div(class="border-4 p-4 w-48")
        div(class="flex flex-col")
          a(class="underline text-lg" href="/users") Rankings
          a(class="underline text-lg" href="/profile") Profile
          a(class="underline text-lg" href="/submit_scores") Submit Scores
          a(class="underline text-lg" href="/") News

      div(class="border-4 border-l-0 p-4 w-full")
        div
          block content